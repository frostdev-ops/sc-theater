# Shadow Company Theater Environment Configuration

# Server Configuration
PORT=4000                      # Port the server will run on

# Authentication
ADMIN_PASSWORD=adminpass       # Password for admin access
VIEWER_PASSWORD=viewerpass     # Password for viewer access
SESSION_EXPIRY_MS=604800000    # Session expiry in milliseconds (default 7 days)

# Logging
LOG_LEVEL=info                 # Log level (debug, info, warn, error)
LOG_SUMMARY_INTERVAL=300000    # Log summary interval in ms (default 5 minutes)

# Plex Integration
PLEX_URL=http://192.168.1.100:32400  # Your Plex server URL (including port)
PLEX_TOKEN=your_plex_token           # Your Plex authentication token
