# Example configuration file for WoW Guild Info Fetcher
# Copy this file to .env and update with your settings

# Blizzard API Credentials
# Get these from https://develop.battle.net/
BLIZZARD_CLIENT_ID="your-client-id"
BLIZZARD_CLIENT_SECRET="your-client-secret"

# Google AI Configuration (Optional)
# Get API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-pro"  # Available models: gemini-pro, gemini-pro-vision
GEMINI_TEMPERATURE=0.7     # 0.0 to 1.0, lower = more focused
GEMINI_TOP_P=0.8          # 0.0 to 1.0, controls diversity
GEMINI_TOP_K=40           # 1 to 100, controls vocabulary range
GEMINI_MAX_TOKENS=2048    # Maximum response length

# Default Guild Settings
DEFAULT_GUILD_NAME="Shadow Company"
DEFAULT_REALM="Duskwood"
DEFAULT_REGION="us"  # us, eu, kr, tw

# Dashboard Settings
STREAMLIT_PORT=8501
STREAMLIT_ENABLE_CORS=false
STREAMLIT_ENABLE_XSRF_PROTECTION=true
STREAMLIT_SERVER_ADDRESS="localhost"
STREAMLIT_GATHER_USAGE_STATS=false

# Application Settings
MAX_LEVEL=80  # Current max level in WoW
DEFAULT_ACTIVE_DAYS=60  # Consider characters inactive after this many days
CACHE_DURATION_HOURS=12  # How long to cache API responses
